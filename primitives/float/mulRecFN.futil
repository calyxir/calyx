/// ======================================================================
// Wrapper for HardFloat's floating-point multiplication modules
/// ======================================================================

extern "mulRecFN.sv" {
  primitive mulRecFN[
    expWidth,
    sigWidth,
    numWidth
  ](
    control: 1,
    a: numWidth,
    b: numWidth,
    roundingMode: 3
  ) -> (
    out: numWidth,
    exceptionFlags: 5
  );
}