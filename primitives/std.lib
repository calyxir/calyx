primitive std_const[p_width, p_value](valid: 1) -> (out: p_width, out_read_out: 1, ready: 1) {
  verilog {
    module std_const
      #(parameter width = 32,
        parameter value = 0)
       (input logic                valid,
        output logic               ready,
        output logic [width - 1:0] out,
        output logic               out_read_out);
      assign out = value;
      assign ready = valid;
      assign out_read_out = valid;
    endmodule
  }
}

