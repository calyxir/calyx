// -b circt -p well-formed
import "primitives/core.futil";
import "primitives/binary_operators.futil";
component main<"static"=1>(@stable(32) in: 32, @go go: 1, @clk clk: 1, @reset reset: 1) -> (@stable(0) out: 32, @done done: 1) {
  cells {
    @precious r = std_reg(32);
    @external(32) le = std_le(32);
  }
  wires {
    group upd<"stable"=1> {
      upd[done] = r.done;
    }
    comb group cond<"stable"=0> {
    }
  }

  control {
    @bound(32) while le.out with cond {
      @static(2) upd;
    }
  }
}
