// -p well-formed -p compile-static -p dead-group-removal -p remove-ids 

// Test that we need separate FSMS: a) across par blocks and b) when a group 
// triggers the "go" hole of another group 
import "primitives/core.futil";
import "primitives/pipelined.futil";

component main() -> () {
  cells {
    a = std_reg(2);
    b = std_reg(2);
    c = std_reg(2);
  }

  wires {
    static<1> group B{
      b.in = 2'd0;
      b.write_en = %0 ? 1'd1;
    }
    static<1> group C{
      c.in = 2'd0;
      c.write_en = %0 ? 1'd1;
    }
    static<1> group A{
      a.in = 2'd0;
      a.write_en = %0 ? 1'd1;
    }
    static<6> group run_A_thrice{
      A[go] = 1'd1; 
    }
  }

  control {
    par {
      par {run_A_thrice; B;}
      C; 
    }
  }
}