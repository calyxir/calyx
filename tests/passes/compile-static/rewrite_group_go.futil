// -p well-formed -p compile-static -p dead-group-removal -p remove-ids 

// in addition to turning A and run_A_thrice into stattic groups, the 
// pass should also rewrite the assignment A[go] to assign to early_reset_A[go]
// and create a wrapper group for run_A_thrice *only* 

import "primitives/core.futil";

component main() -> () {
  cells {
    a = std_reg(2);
    b = std_reg(2);
    c = std_reg(2);
  }

  wires {
    group dyn_B {
      b.write_en = 1'd1; 
      b.in = 2'd1; 
      dyn_B[done] = b.done; 
    }
    
    group dyn_C {
      c.write_en = 1'd1; 
      c.in = 2'd1; 
      dyn_C[done] = c.done; 
    }

    static group A<2>{
      a.in = 2'd0;
      a.write_en = %0 ? 1'd1;
      b.in = 2'd1;
      b.write_en = %1 ? 1'd1;
    }

    static group run_A_thrice <6>{
      A[go] = 1'd1; 
    }
  }

  control {
    seq {
      dyn_B; 
      dyn_C; 
      run_A_thrice;
    }
  }
}