// -p well-formed -p static-inline -p simplify-static-guards -p remove-ids -p dead-group-removal

import "primitives/core.futil";
import "primitives/binary_operators.futil";

// you can see how static-inliner currently adds unnecessary guards 

component main() -> () {
  cells {
    a = std_reg(2);
    mult = std_mult_pipe(2);
    b = std_reg(2);
    c = std_reg(2);
    d = std_reg(2);
    lt = std_lt(32);
  }

  wires {
    static group A<2>{
      a.in = 2'd0;
      a.write_en = %0 ? 1'd1;
      b.in = 2'd1;
      b.write_en = %1 ? 1'd1;
    }

    static group A3<3>{
      mult.left = 2'd1; 
      mult.right = 2'd3;
      mult.go = 1'd1; 
    }

    static group C<1>{
      c.in = 2'd2;
      c.write_en = %0 ? 1'd1;
    }

    static group D<1>{
      c.in = 2'd2;
      c.write_en = %0 ? 1'd1;
    }

  }

  control {
    static par {
      static if lt.out { A; } else { C; }
      static seq { A3; D; }
    }
    
  }
}