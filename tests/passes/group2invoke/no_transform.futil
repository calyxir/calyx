// -p group2invoke -p dead-group-removal
import "primitives/core.futil";
component main() -> () {
  cells {
    r = std_reg(32);
    a = std_reg(32);
    lt = std_lt(32);
  }
  wires {
    // don't transform since writing to two registers in this group 
    group chain{
      r.write_en = !r.done ? 1'd1; 
      r.in = 32'd2; 
      a.in = 32'd7; 
      a.write_en = r.done; 
      chain[done] = a.done; 
    }
    // don't transform since r takes guarded assignment 
    group exp{
      lt.left = 32'd2;
      lt.right = 32'd4;
      r.write_en = 1'd1;
      r.in = lt.out ? 32'd19;
      exp[done] = r.done;
    }
  }
  control {
    seq{
      chain;
      exp; 
    }
  }
}
