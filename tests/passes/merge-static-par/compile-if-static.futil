// -p validate -p merge-static-par

import "primitives/core.futil";

component main() -> () {
  cells {
    t = std_reg(1);
    f = std_reg(1);
    a = std_reg(3);
    adder = std_add(3);
  }

  wires {
    group true<"static"=1> {
      t.in = 1'b1;
      t.write_en = 1'b1;
      true[done] = t.done;
    }

    group false<"static"=1> {
      f.in = 1'b1;
      f.write_en = 1'b1;
      false[done] = f.done;
    }

    group add<"static"=1> {
      adder.left = 3'b1;
      adder.right = 3'b0;
      a.in = adder.out;
      a.write_en = 1'b1;
      add[done] = a.done;
    }
  }

  control {
    par {
      true; false; add;
    }
  }
}
