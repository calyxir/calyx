// -p validate -p inline
import "primitives/compile.futil";

static<1> component foo() -> () {
    cells {
        ref r = std_reg(32);
        add = std_add(32);
    }
    wires {
        static<1> group incr {
            r.in = add.out;
            r.write_en = 1'd1;
            add.left = r.out;
            add.right = 32'd1;
            // incr[done] = r.done;
        }
    }
    control {
        incr;
    }
}

component main () -> () {
    cells {
        @inline f = foo();
        r0 = std_reg(32);
    }
    wires {}
    control {
        @one_hot static invoke f[r=r0]()();
    }
}