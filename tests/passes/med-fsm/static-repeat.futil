// -p med-fsm
import "primitives/core.futil";
import "primitives/memories/comb.futil";

component main() -> () {
  cells {
    a = std_reg(2);
    b = std_reg(2);
  }
  wires {
    static<1> group A {
      a.in = 2'd0;
      a.write_en = %0 ? 1'd1;
    }
    static<1> group B {
      b.in = 2'd1;
      b.write_en = %0 ? 1'd1;
    }
  }

  control {
    static seq { 
      A;
      static repeat 3{
        A;
      } 
      B;
    }
  }
}