// -p med-fsm -x tdcc:infer-fsms

import "primitives/core.futil";
import "primitives/memories/comb.futil";

component main() -> () {
  cells {
    lt = std_lt(1);
    a = std_reg(2);
    b = std_reg(2);
  }

  wires {
    comb group cond {
      lt.left = 1'b1;
      lt.right = 1'b0;
    }

    static<1> group A {
      a.in = 2'd0;
      a.write_en = %0 ? 1'd1;
    }
    static<1> group B {
      b.in = 2'd1;
      b.write_en = %0 ? 1'd1;
    }
  }

  control {
    if lt.out with cond {
      static repeat 3{
        A;
      }
    } else {
      static repeat 3{
        B;
      }
    }
  }
}
