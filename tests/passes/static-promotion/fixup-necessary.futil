// -p well-formed -p static-promotion -x static-promotion:threshold=5 -x static-promotion:compaction=false -p dead-group-removal

import "primitives/core.futil";
import "primitives/memories/comb.futil";

component foo(base: 32, exp: 4, @go @promotable(2) go: 1, @clk clk: 1, @reset reset: 1) -> (out: 32, @done done: 1) {
  cells {
    r1 = std_reg(32);
    r2 = std_reg(32);
  }
  wires {
    group upd2<"promotable"=1> {
      r2.in = 32'd1;
      r2.write_en = 1'd1;
      upd2[done] = r2.done;
    }
    group upd1<"promotable"=1> {
      r1.in = 32'd1;
      r1.write_en = 1'd1;
      upd1[done] = r1.done;
    }
  }
  control {
    @promotable(2) seq {
      @promotable upd1;
      @promotable upd2;
    }
  }
}
component main(@go go: 1, @clk clk: 1, @reset reset: 1) -> (@done done: 1) {
  cells {
    a = std_reg(2);
    b = std_reg(2);
    foo_inst = foo();
  }
  wires {
    group A<"promotable"=1> {
      a.in = 2'd0;
      a.write_en = 1'd1;
      A[done] = a.done;
    }
    group B<"promotable"=1> {
      b.in = 2'd1;
      b.write_en = 1'd1;
      B[done] = b.done;
    }
    group F<"promotable"=2> {
      foo_inst.go = 1'd1;
      F[done] = foo_inst.done;
    }
  }
  control {
    @promotable(10) seq {
      @promotable A;
      @promotable A;
      @promotable A;
      @promotable A;
      @promotable B;
      @promotable B;
      @promotable B;
      @promotable B;
      @promotable(2) F;
    }
  }
}