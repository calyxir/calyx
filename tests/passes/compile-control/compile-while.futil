// -p compile-control

import "primitives/std.lib";

component main() -> () {
  cells {
    add = std_add(32);
    lt = std_lt(32);
  }

  wires {
    group do_add {
      add.right = 32'd4;
      add.left = 32'd4;
      do_add[done] = 1'b1;
    }

    group cond {
      lt.right = 32'd5;
      lt.left = 32'd1;
      cond[done] = 1'b1;
    }

  }

  control {
    while lt.out with cond {
      do_add;
    }
  }
}
