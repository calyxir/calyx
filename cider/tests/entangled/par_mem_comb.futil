// --entangle 'a,c' --entangle 'b,d'
import "primitives/core.futil";
import "primitives/memories/comb.futil";

component main() -> () {
  cells {
    @external a = comb_mem_d1(32, 4, 32);
    @external b = comb_mem_d1(32, 4, 32);
    @external c = comb_mem_d1(32, 4, 32);
    @external d = comb_mem_d1(32, 4, 32);
  }

  wires {
    group wr_a {
      a.addr0 = 32'd0;
      a.write_en = 1'b1;
      a.write_data = 32'd1;
      wr_a[done] = a.done;
    }

    group wr_b {
      b.addr0 = 32'd1;
      b.write_en = 1'b1;
      b.write_data = 32'd2;
      wr_b[done] = b.done;
    }

    group wr_c {
      c.addr0 = 32'd2;
      c.write_en = 1'b1;
      c.write_data = 32'd3;
      wr_c[done] = c.done;
    }

    group wr_d {
      d.addr0 = 32'd3;
      d.write_en = 1'b1;
      d.write_data = 32'd4;
      wr_d[done] = d.done;
    }
  }

  control {
    par {
      wr_a;
      wr_b;
      wr_c;
      wr_d;
    }
  }
}
